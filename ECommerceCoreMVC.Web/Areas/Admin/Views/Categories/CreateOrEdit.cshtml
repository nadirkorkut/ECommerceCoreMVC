@model Category
<div class="form-group">
    <label asp-for="RayonId"></label>
    <select asp-for="RayonId" asp-items="@ViewBag.Rayons as SelectList" class="custom-select">
        <option value="" selected disabled>Reyon Seçiniz...</option>
    </select>
    <span asp-validation-for="RayonId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control">
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group form-check">
    <input asp-for="Enabled" class="form-check-input">
    <label asp-for="Enabled" class="form-check-label"></label>
</div>


