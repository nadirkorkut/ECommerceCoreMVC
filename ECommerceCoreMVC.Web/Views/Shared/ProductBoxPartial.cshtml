@model Product
<div class="card" style="width:100%; height:100%;">
        <a asp-route="product" asp-route-id="@Model.Id" asp-route-name="@Model.Name.ToSafeUrlString()">
            <img src="@Model.Image" class="card-img-top" style="width:100%; height:100%;" alt="@Model.Name">
        </a>
        <div class="card-body">
            <h6 class="card-title">
                @Model.Name
            </h6>
            <div style="height:80px; overflow: hidden;">
                <p class="card-text">
                    @if (Model.Discount > 0)
                    {
                    <div class="d-flex mb-2">
                        <div class="py-1 px-2 text-center h4 bg-danger text-white d-flex align-items-center">
                            <div>
                                %@Model.Discount.ToString("n0")
                            </div>
                        </div>
                        <div class="flex-fill p-2">
                            <div class="text-muted h6" style="text-decoration: line-through">
                                @Model.Price.ToString("c2")
                            </div>
                            <div class="text-success h5">
                                @Model.DiscountedPrice.ToString("c2")
                            </div>
                        </div>
                    </div>
                    }
                    else
                    {
                        <div class="text-success h5 mb-2">
                            @Model.Price.ToString("c2")
                        </div>
                    }
                </p>
            </div>
            <div class="d-flex justify-content-center">
                <a class="btn btn-link" asp-route="product" asp-route-id="@Model.Id" asp-route-name="@Model.Name.ToSafeUrlString()">
                    <i class="fa fa-search"></i>
                </a>
                <a class="btn btn-link" asp-controller="Home" asp-action="AddToCart" asp-route-id="@Model.Id">
                    <i class="fa fa-shopping-cart"></i>
                </a>
            </div>
        </div>
</div>